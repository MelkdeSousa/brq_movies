{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@components/*": [
        "src/components/*"
      ]
    },
    "typeRoots": [
      "node_modules/@types",
      "./src/types"
    ]
  },
  "include": [
    "src/types/*.ts",
    "src/**/*.ts",
  ],
  "exclude": [
    "**/*.test.tsx",
    "**/*.spec.tsx",
    "node_modules"
  ]
}